<Window x:Class="ADWorkerSecondLine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Behaviors="clr-namespace:ADWorkerSecondLine.UIWatermarkedTextBox"
        xmlns:Converters="clr-namespace:ADWorkerSecondLine.Converters"
        xmlns:Providers="clr-namespace:ADWorkerSecondLine.DataProvider"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:l="clr-namespace:ADWorkerSecondLine.UISearchTextBox"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Работа с АД вторая линия"
        Width="811"
        Height="1040"
        Background="#FFA4A4A4"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Window.Resources>
        <ObjectDataProvider x:Key="AsyncDataSource"
                            IsAsynchronous="True"
                            MethodName="GetItems"
                            ObjectType="Providers:AsyncDataProvider" />
        <ObjectDataProvider x:Key="AsyncDataSourcePC"
                            IsAsynchronous="True"
                            MethodName="GetPCItems"
                            ObjectType="Providers:AsyncDataProvider" />
        <ObjectDataProvider x:Key="AsyncDataSourceGroup"
                            IsAsynchronous="True"
                            MethodName="GetGroupsItems"
                            ObjectType="Providers:AsyncDataProvider" />
        <Converters:NullToBooleanConverter x:Key="NullToBooleanConverter" />
        <Converters:BooleanToStringConverter x:Key="BooleanToStringConverter" />
        <Converters:DateTimeToStringConverter x:Key="DateTimeToStringConverter" />
        <Converters:DateTimeToColorConverter x:Key="DateTimeToColorConverter" />
        <DataTemplate x:Key="ArrowUp">
            <DockPanel>
                <TextBlock HorizontalAlignment="Center" Text="{Binding}" />
                <Path VerticalAlignment="Center"
                      Data="M 5,5 15,5 10,0 5,5"
                      Fill="Black" />
            </DockPanel>
        </DataTemplate>
        <DataTemplate x:Key="ArrowDown">
            <DockPanel>
                <TextBlock HorizontalAlignment="Center" Text="{Binding}" />
                <Path VerticalAlignment="Center"
                      Data="M 5,0 10,5 15,0 5,0"
                      Fill="Black" />
            </DockPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="996*" />
            <RowDefinition Height="61*" />
        </Grid.RowDefinitions>
        <GroupBox Height="49"
                  Margin="10,26,10,0"
                  VerticalAlignment="Top"
                  FontWeight="Bold"
                  Header="Соединение с АД">
            <Grid Margin="0,0,-2,-12.96">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="387*" />
                    <ColumnDefinition Width="386*" />
                </Grid.ColumnDefinitions>
                <TextBlock Width="44"
                           Height="16"
                           Margin="10,4,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           TextWrapping="Wrap"><Run Text="Домен" /><Run Text=":" />
                </TextBlock>
                <TextBox x:Name="domainForConnect"
                         Width="101"
                         Height="23"
                         Margin="59,0,0,0"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         TextWrapping="Wrap" />
                <TextBlock Width="40"
                           Height="16"
                           Margin="163,4,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="Логин:"
                           TextWrapping="Wrap" />
                <TextBox x:Name="loginForConnect"
                         Height="23"
                         Margin="208,0,10,0"
                         VerticalAlignment="Top"
                         TextWrapping="Wrap" />
                <TextBlock Grid.Column="1"
                           Width="49"
                           Height="16"
                           Margin="0,4,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Text="Пароль:"
                           TextWrapping="Wrap" />
                <PasswordBox x:Name="passForConnect"
                             Grid.Column="1"
                             Height="24"
                             Margin="54,0,177,0"
                             VerticalAlignment="Top"
                             KeyDown="passForConnect_KeyDown" />
                <Button x:Name="btConnect"
                        Grid.Column="1"
                        Width="162"
                        Height="22"
                        Margin="0,1,10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="btConnect_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="imagebtConnect"
                                   Width="16"
                                   Height="16"
                                   Margin="0,0,5,0"
                                   Source="/ADWorkerSecondLine;component/Resources/connect_no.ico" />
                            <TextBlock x:Name="textbtConnect" Text="Подключиться" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
        </GroupBox>
        <TabControl x:Name="rootTabControl"
                    Grid.RowSpan="2"
                    Margin="10,80,10,27"
                    Focusable="False">
            <TabControl.Template>
                <ControlTemplate TargetType="TabControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                            <TabPanel x:Name="HeaderPanel"
                                      Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="1,2,1,1"
                                      Panel.ZIndex="1"
                                      IsItemsHost="true"
                                      KeyboardNavigation.TabIndex="1" />
                        </ScrollViewer>
                        <Rectangle Grid.Row="1" Fill="White" />
                        <ContentPresenter x:Name="PART_SelectedContentHost"
                                          Grid.Row="1"
                                          Margin="{TemplateBinding Padding}"
                                          ContentSource="SelectedContent"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                    </Grid>
                </ControlTemplate>
            </TabControl.Template>
            <TabItem x:Name="userTab"
                     BorderBrush="#FF767880"
                     Header="Пользователи">
                <Grid Background="#FFC1C1C1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="260*" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="587*" />
                        <RowDefinition Height="27*" />
                    </Grid.RowDefinitions>
                    <GroupBox Margin="10,10,10,3"
                              BorderBrush="Black"
                              Header="Поиск пользователя в домене">
                        <Grid Margin="0,0,-2,-12.96">
                            <Grid Height="70" VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="598*" />
                                    <ColumnDefinition Width="155*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="23*" />
                                    <RowDefinition Height="21*" />
                                    <RowDefinition Height="26*" />
                                </Grid.RowDefinitions>
                                <l:SearchTextBox x:Name="search"
                                                 Grid.ColumnSpan="2"
                                                 Height="23"
                                                 Margin="10,0"
                                                 VerticalAlignment="Top"
                                                 Background="AliceBlue"
                                                 LabelText="Поиск" />
                                <CheckBox x:Name="findOnlyLockUser"
                                          Grid.Row="1"
                                          Height="16"
                                          Margin="10,3,0,0"
                                          VerticalAlignment="Top"
                                          Click="findOnlyLockUser_Click"
                                          Content="Показать только заблокированных пользователей" />
                                <Button x:Name="btUpdateFind"
                                        Grid.Row="1"
                                        Grid.RowSpan="2"
                                        Grid.Column="1"
                                        Height="45"
                                        Margin="0,3,10,-1"
                                        VerticalAlignment="Top"
                                        Click="btUpdateFind_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="16"
                                               Height="16"
                                               Margin="0,0,5,0"
                                               Source="/ADWorkerSecondLine;component/Resources/Update.ico" />
                                        <TextBlock Text="Обновить" />
                                    </StackPanel>
                                </Button>
                                <CheckBox x:Name="findUserInOU"
                                          Grid.Row="2"
                                          Width="200"
                                          Height="16"
                                          Margin="10,4,0,0"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Top"
                                          Click="findUserInOU_Click"
                                          Content="Показать пользователей из OU =" />
                                <TextBox x:Name="OUForFind"
                                         Grid.Row="2"
                                         Height="23"
                                         Margin="215,1,35,0"
                                         VerticalAlignment="Top"
                                         IsEnabled="False"
                                         IsReadOnly="True"
                                         IsReadOnlyCaretVisible="True" />
                                <Button x:Name="btSelectOUForFind"
                                        Grid.Row="2"
                                        Width="30"
                                        Height="23"
                                        Margin="0,1,5,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Click="btSelectOUForFind_Click"
                                        IsEnabled="False"
                                        ToolTip="Выбрать OU для поиска">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="16"
                                                   Height="16"
                                                   Margin="0,0,5,0"
                                                   Source="/ADWorkerSecondLine;component/Resources/selectOU.ico" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                            </Grid>
                            <Behaviors:WatermarkedTextBox x:Name="filterFindUser"
                                                          Height="23"
                                                          Margin="0,75,0,0"
                                                          VerticalAlignment="Top"
                                                          Text=""
                                                          TextChanged="filterFindUser_TextChanged"
                                                          TextWrapping="Wrap" />
                            <ListView x:Name="listFindedUsers"
                                      Margin="0,103,0,9.96"
                                      ButtonBase.Click="listFindedUsers_Click"
                                      SelectionChanged="listFindedUsers_SelectionChanged">
                                <ListView.Resources>
                                    <Style TargetType="{x:Type ListViewItem}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding AccountIsDisable}" Value="True">
                                                <Setter Property="Foreground" Value="Red" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListView.Resources>
                                <ListView.ItemsSource>
                                    <Binding IsAsync="True" Source="{StaticResource AsyncDataSource}" />
                                </ListView.ItemsSource>
                                <ListView.Style>
                                    <Style TargetType="{x:Type ListBox}">
                                        <Style.Triggers>
                                            <Trigger Property="ItemsSource" Value="{x:Null}">
                                                <Setter Property="Template" Value="{StaticResource WaitControlTemplate}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListView.Style>
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn DisplayMemberBinding="{Binding NameInAD}" Header="Имя пользователя в АД" />
                                        <GridViewColumn DisplayMemberBinding="{Binding Post}" Header="Должность" />
                                        <GridViewColumn DisplayMemberBinding="{Binding PhoneInt}" Header="Внутр. тел." />
                                        <GridViewColumn DisplayMemberBinding="{Binding Mail}" Header="EMail" />
                                        <GridViewColumn DisplayMemberBinding="{Binding AccountIsDisable, Converter={StaticResource BooleanToStringConverter}}" Header="Пользователь отключен" />
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </GroupBox>
                    <GridSplitter Grid.Row="1"
                                  Margin="10,0"
                                  HorizontalAlignment="Stretch" />
                    <ScrollViewer Grid.Row="2" Margin="10,5,10,0">
                        <Grid>
                            <Border Height="435"
                                    VerticalAlignment="Top"
                                    BorderBrush="Black"
                                    BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="28*" />
                                        <RowDefinition Height="28*" />
                                        <RowDefinition Height="28*" />
                                        <RowDefinition Height="28*" />
                                        <RowDefinition Height="28*" />
                                        <RowDefinition Height="28*" />
                                        <RowDefinition Height="28*" />
                                        <RowDefinition Height="28*" />
                                        <RowDefinition Height="28*" />
                                        <RowDefinition Height="28*" />
                                        <RowDefinition Height="28*" />
                                        <RowDefinition Height="28*" />
                                        <RowDefinition Height="28*" />
                                        <RowDefinition Height="28*" />
                                        <RowDefinition Height="28*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="195*" />
                                        <ColumnDefinition Width="209*" />
                                        <ColumnDefinition Width="120*" />
                                        <ColumnDefinition Width="227*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Height="16"
                                               Margin="10,4,10,0"
                                               VerticalAlignment="Top"
                                               TextAlignment="Right"
                                               TextWrapping="Wrap">
                                        <Span FontWeight="Bold"><Run Text="Расположение в АД:" />
                                        </Span>
                                    </TextBlock>
                                    <TextBox x:Name="userInAD"
                                             Grid.Column="1"
                                             Grid.ColumnSpan="3"
                                             Height="22"
                                             Margin="10,3,45,0"
                                             VerticalAlignment="Top"
                                             IsReadOnly="True"
                                             IsReadOnlyCaretVisible="True"
                                             Text="{Binding ElementName=listFindedUsers,
                                                            Path=SelectedItem.PlaceInAD,
                                                            Mode=OneWay,
                                                            UpdateSourceTrigger=PropertyChanged}" />
                                    <Button x:Name="btMoveUserInAD"
                                            Grid.Column="3"
                                            Width="35"
                                            Height="23"
                                            Margin="0,3,10,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Click="btMoveUserInAD_Click"
                                            ToolTip="Переместить пользователя">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Width="16"
                                                       Height="16"
                                                       Margin="0,0,5,0"
                                                       Source="/ADWorkerSecondLine;component/Resources/move_user.ico" />
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                    <TextBlock Grid.Row="1"
                                               Height="16"
                                               Margin="10,7,10,0"
                                               VerticalAlignment="Top"
                                               FontWeight="Bold"
                                               Text="Имя:"
                                               TextAlignment="Right"
                                               TextWrapping="Wrap" />
                                    <TextBox x:Name="userName"
                                             Grid.Row="1"
                                             Grid.Column="1"
                                             Height="22"
                                             Margin="10,4,35,0"
                                             VerticalAlignment="Top"
                                             IsReadOnly="True"
                                             IsReadOnlyCaretVisible="True"
                                             Text="{Binding ElementName=listFindedUsers,
                                                            Path=SelectedItem.Name,
                                                            Mode=OneWay,
                                                            UpdateSourceTrigger=PropertyChanged}" />
                                    <Button x:Name="btChangeUserName"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Width="35"
                                            Height="23"
                                            Margin="0,4,0,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Click="btChangeUserName_Click"
                                            ToolTip="Изменить имя">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Width="16"
                                                       Height="16"
                                                       Margin="0,0,5,0"
                                                       Source="/ADWorkerSecondLine;component/Resources/edit.ico" />
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="2"
                                               Height="16"
                                               Margin="10,7,10,0"
                                               VerticalAlignment="Top"
                                               FontWeight="Bold"
                                               Text="Фамилия:"
                                               TextAlignment="Right"
                                               TextWrapping="Wrap" />
                                    <TextBox x:Name="userSurname"
                                             Grid.Row="1"
                                             Grid.Column="3"
                                             Height="22"
                                             Margin="10,4,45,0"
                                             VerticalAlignment="Top"
                                             IsReadOnly="True"
                                             IsReadOnlyCaretVisible="True"
                                             Text="{Binding ElementName=listFindedUsers,
                                                            Path=SelectedItem.Surname,
                                                            Mode=OneWay,
                                                            UpdateSourceTrigger=PropertyChanged}" />
                                    <Button x:Name="btChangeUserSurname"
                                            Grid.Row="1"
                                            Grid.Column="3"
                                            Width="35"
                                            Height="23"
                                            Margin="0,4,10,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Click="btChangeUserSurname_Click"
                                            ToolTip="Изменить должность">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Width="16"
                                                       Height="16"
                                                       Margin="0,0,5,0"
                                                       Source="/ADWorkerSecondLine;component/Resources/edit.ico" />
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                    <TextBlock Grid.Row="2"
                                               Height="16"
                                               Margin="10,7,10,0"
                                               VerticalAlignment="Top"
                                               FontWeight="Bold"
                                               Text="Логин:"
                                               TextAlignment="Right"
                                               TextWrapping="Wrap" />
                                    <TextBox x:Name="userLogin"
                                             Grid.Row="2"
                                             Grid.Column="1"
                                             Height="22"
                                             Margin="10,4,35,0"
                                             VerticalAlignment="Top"
                                             IsReadOnly="True"
                                             IsReadOnlyCaretVisible="True"
                                             Text="{Binding ElementName=listFindedUsers,
                                                            Path=SelectedItem.Login,
                                                            Mode=OneWay,
                                                            UpdateSourceTrigger=PropertyChanged}" />
                                    <Button x:Name="btChangeUserLogin"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Width="35"
                                            Height="23"
                                            Margin="0,4,0,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Click="btChangeUserLogin_Click"
                                            ToolTip="Изменить Логин">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Width="16"
                                                       Height="16"
                                                       Margin="0,0,5,0"
                                                       Source="/ADWorkerSecondLine;component/Resources/edit.ico" />
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                    <TextBlock Grid.Row="2"
                                               Grid.Column="2"
                                               Height="16"
                                               Margin="10,7,6,0"
                                               VerticalAlignment="Top"
                                               FontWeight="Bold"
                                               Text="Имя в АД:"
                                               TextAlignment="Right"
                                               TextWrapping="Wrap" />
                                    <TextBox x:Name="userNameInAD"
                                             Grid.Row="2"
                                             Grid.Column="3"
                                             Height="22"
                                             Margin="10,4,45,0"
                                             VerticalAlignment="Top"
                                             IsReadOnly="True"
                                             IsReadOnlyCaretVisible="True"
                                             Text="{Binding ElementName=listFindedUsers,
                                                            Path=SelectedItem.NameInAD,
                                                            Mode=OneWay,
                                                            UpdateSourceTrigger=PropertyChanged}" />
                                    <Button x:Name="btChangeUserNameInAD"
                                            Grid.Row="2"
                                            Grid.Column="3"
                                            Width="35"
                                            Height="23"
                                            Margin="0,4,10,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Click="btChangeUserNameInAD_Click"
                                            ToolTip="Изменить имя в АД">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Width="16"
                                                       Height="16"
                                                       Margin="0,0,5,0"
                                                       Source="/ADWorkerSecondLine;component/Resources/edit.ico" />
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                    <TextBlock Grid.Row="3"
                                               Height="16"
                                               Margin="10,7,10,0"
                                               VerticalAlignment="Top"
                                               FontWeight="Bold"
                                               TextAlignment="Right"
                                               TextWrapping="Wrap"><Run Text="Отображаемое имя" /><Run Text=":" />
                                    </TextBlock>
                                    <TextBox x:Name="userDisplayName"
                                             Grid.Row="3"
                                             Grid.Column="1"
                                             Height="22"
                                             Margin="10,3,35,0"
                                             VerticalAlignment="Top"
                                             IsReadOnly="True"
                                             IsReadOnlyCaretVisible="True"
                                             Text="{Binding SelectedItem.DisplayName,
                                                            ElementName=listFindedUsers,
                                                            Mode=OneWay,
                                                            UpdateSourceTrigger=PropertyChanged}" />
                                    <Button x:Name="btChangeUserDisplayName"
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Width="35"
                                            Height="23"
                                            Margin="0,3,0,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Click="btChangeUserDisplayName_Click"
                                            ToolTip="Изменить отображаемое имя">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Width="16"
                                                       Height="16"
                                                       Margin="0,0,5,0"
                                                       Source="/ADWorkerSecondLine;component/Resources/edit.ico" />
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                    <TextBlock Grid.Row="3"
                                               Grid.Column="2"
                                               Height="16"
                                               Margin="10,7,6,0"
                                               VerticalAlignment="Top"
                                               FontWeight="Bold"
                                               TextAlignment="Right"
                                               TextWrapping="Wrap"><Run Text="Организация" /><Run Text=":" />
                                    </TextBlock>
                                    <TextBox x:Name="userOrganization"
                                             Grid.Row="3"
                                             Grid.Column="3"
                                             Height="22"
                                             Margin="10,2,45,0"
                                             VerticalAlignment="Top"
                                             IsReadOnly="True"
                                             IsReadOnlyCaretVisible="True"
                                             Text="{Binding SelectedItem.Organization,
                                                            ElementName=listFindedUsers,
                                                            Mode=OneWay,
                                                            UpdateSourceTrigger=PropertyChanged}" />
                                    <Button x:Name="btChangeUserOrganization"
                                            Grid.Row="3"
                                            Grid.Column="3"
                                            Width="35"
                                            Height="23"
                                            Margin="0,2,10,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Click="btChangeUserOrganization_Click"
                                            ToolTip="Изменить организацию">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Width="16"
                                                       Height="16"
                                                       Margin="0,0,5,0"
                                                       Source="/ADWorkerSecondLine;component/Resources/edit.ico" />
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                    <TextBlock Grid.Row="4"
                                               Height="16"
                                               Margin="10,8,10,0"
                                               VerticalAlignment="Top"
                                               FontWeight="Bold"
                                               TextAlignment="Right"
                                               TextWrapping="Wrap"><Run Text="Должность" /><Run Text=":" />
                                    </TextBlock>
                                    <TextBox x:Name="userPost"
                                             Grid.Row="4"
                                             Grid.Column="1"
                                             Grid.ColumnSpan="3"
                                             Height="22"
                                             Margin="10,4,45,0"
                                             VerticalAlignment="Top"
                                             IsReadOnly="True"
                                             IsReadOnlyCaretVisible="True"
                                             Text="{Binding ElementName=listFindedUsers,
                                                            Path=SelectedItem.Post,
                                                            Mode=OneWay,
                                                            UpdateSourceTrigger=PropertyChanged}" />
                                    <Button x:Name="btChangeUserPost"
                                            Grid.Row="4"
                                            Grid.Column="3"
                                            Width="35"
                                            Height="23"
                                            Margin="0,4,10,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Click="btChangeUserPost_Click"
                                            ToolTip="Изменить должность">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Width="16"
                                                       Height="16"
                                                       Margin="0,0,5,0"
                                                       Source="/ADWorkerSecondLine;component/Resources/edit.ico" />
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                    <TextBlock Grid.Row="5"
                                               Height="16"
                                               Margin="10,7,10,0"
                                               VerticalAlignment="Top"
                                               FontWeight="Bold"
                                               TextAlignment="Right"
                                               TextWrapping="Wrap"><Run Text="Отдел" /><Run Text=":" />
                                    </TextBlock>
                                    <TextBox x:Name="userDepartment"
                                             Grid.Row="5"
                                             Grid.Column="1"
                                             Grid.ColumnSpan="3"
                                             Height="22"
                                             Margin="10,4,45,0"
                                             VerticalAlignment="Top"
                                             IsReadOnly="True"
                                             IsReadOnlyCaretVisible="True"
                                             Text="{Binding ElementName=listFindedUsers,
                                                            Path=SelectedItem.Department,
                                                            Mode=OneWay,
                                                            UpdateSourceTrigger=PropertyChanged}" />
                                    <Button x:Name="btChangeUserDepartment"
                                            Grid.Row="5"
                                            Grid.Column="3"
                                            Width="35"
                                            Height="23"
                                            Margin="0,4,10,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Click="btChangeUserDepartment_Click"
                                            ToolTip="Изменить отдел">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Width="16"
                                                       Height="16"
                                                       Margin="0,0,5,0"
                                                       Source="/ADWorkerSecondLine;component/Resources/edit.ico" />
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                    <TextBlock Grid.Row="6"
                                               Height="16"
                                               Margin="10,7,10,0"
                                               VerticalAlignment="Top"
                                               FontWeight="Bold"
                                               Text="Адрес:"
                                               TextAlignment="Right"
                                               TextWrapping="Wrap" />
                                    <TextBox x:Name="userAdress"
                                             Grid.Row="6"
                                             Grid.Column="1"
                                             Grid.ColumnSpan="3"
                                             Height="22"
                                             Margin="10,3,45,0"
